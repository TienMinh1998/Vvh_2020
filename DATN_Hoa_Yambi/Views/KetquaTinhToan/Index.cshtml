
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <!--Thân của chương trình-->

    <div class="container">
        <!-- begin::Card-->
        <div class="card card-custom overflow-hidden">
            <div class="card-body p-0">
                <!-- begin: Invoice-->
                <!-- begin: Invoice header-->
                <div class="row justify-content-center bgi-size-cover bgi-no-repeat py-8 px-8 py-md-27 px-md-0" style=" background-image: url(../../assets/media/bg/bg-6.jpg);">
                    <div class="col-md-9">
                        <div class="d-flex justify-content-between pb-10 pb-md-20 flex-column flex-md-row">
                            <h1 class="display-4 text-white font-weight-boldest mb-10 ">KẾT QUẢ TÍNH TOÁN XONG MÓNG CỌC:</h1>
                            <div class="d-flex flex-column align-items-md-end px-0">
                                <!--begin::Logo-->
                                <a href="#" class="mb-5">
                                    <img src="~/assets/media/logos/stars.png" alt="">
                                </a>
                                <!--end::Logo-->
                                <span class="text-white d-flex flex-column align-items-md-end opacity-70">
                                    <span>Trạng thái tính toán</span>
                                    <span class="text-success">Success!</span>
                                </span>
                            </div>
                        </div>
                        <div class="border-bottom w-100 opacity-20"></div>
                        <div class="d-flex justify-content-between text-white pt-6">
                            <div class="d-flex flex-column flex-root">
                                <span class="font-weight-bolde mb-2r">Bố trị khoảng cách cọc</span>
                                <span class="opacity-70">Thỏa mãn.</span>
                            </div>
                            <div class="d-flex flex-column flex-root">
                                <span class="font-weight-bolder mb-2">Cột đâm thủng đài:</span>
                                <span class="opacity-70">Thỏa mãn.</span>
                            </div>
                            <div class="d-flex flex-column flex-root">
                                <span class="font-weight-bolder mb-2">Cọc đâm thủng đài&gt;</span>
                                <span class="opacity-70">
                                    Thỏa mãn.

                                </span>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- end: Invoice header-->
                <!-- begin: Invoice body-->
                <div class="row justify-content-center py-8 px-8 py-md-10 px-md-0">
                    <div class="col-md-9">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th class="pl-0 font-weight-bold text-muted text-uppercase">Các trường tính toán:</th>

                                        <th class="text-right pr-0 font-weight-bold text-muted text-uppercase">Giá trị.</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr class="font-weight-boldest font-size-lg">
                                        <td class="pl-0 pt-7">Diện tích thép theo phương X :</td>
                                        <td class="text-danger pr-0 pt-7 text-right" id="txt_As_Canh_Dai" name="txt_As_Canh_Dai">0</td>
                                    </tr>
                                    <!--Rb-->
                                    <tr class="font-weight-boldest font-size-lg">
                                        <td class="pl-0 pt-7">Diện tích thép theo phương Y :</td>
                                        <td class="text-danger pr-0 pt-7 text-right" id="txt_As_Canh_Ngan" name="txt_As_Canh_Ngan">0</td>
                                    </tr>
                                    <!--End Rb-->
                                    <!--B dài-->
                                    <tr class="font-weight-boldest font-size-lg">
                                        <td class="pl-0 pt-7">B[Đài] :</td>
                                        <td class="text-danger pr-0 pt-7 text-right" id="txt_B_Dai" name="txt_B_Dai">0</td>
                                    </tr>
                                    <!--End End B Đài-->
                                    <!--H  dài-->
                                    <tr class="font-weight-boldest font-size-lg">
                                        <td class="pl-0 pt-7">L[Đài] :</td>
                                        <td class="text-danger pr-0 pt-7 text-right" id="txt_H_Dai" name="txt_H_Dai">0</td>
                                    </tr>

                                    <!--Số cọc-->
                                    <tr class="font-weight-boldest font-size-lg">
                                        <td class="pl-0 pt-7">Số cọc:</td>
                                        <td class="text-danger pr-0 pt-7 text-right" id="txt_sc" name="txt_sc">0</td>
                                    </tr>
                                    <!--End End H Đài-->
                                    <!--H  dài-->
                                    <tr class="font-weight-boldest font-size-lg">
                                        <td class="pl-0 pt-7">B [cột]</td>
                                        <td class="text-danger pr-0 pt-7 text-right" id="txt_bcot" name="txt_bcot">0</td>
                                    </tr>
                                    <!--End End H Đài-->
                                    <!-- h cot-->
                                    <tr class="font-weight-boldest font-size-lg">
                                        <td class="pl-0 pt-7">H [cột]</td>
                                        <td class="text-danger pr-0 pt-7 text-right" id="txt_hcot" name="txt_hcot">0</td>
                                    </tr>
                                    <!--End End H Đài-->
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <!-- end: Invoice body-->
                <!-- begin: Invoice footer-->
                <div class="row justify-content-center bg-gray-100 py-8 px-8 py-md-10 px-md-0">
                    <div class="col-md-9">
                        <div class="d-flex justify-content-between flex-column flex-md-row font-size-lg">
                            <div class="d-flex flex-column mb-10 mb-md-0">
                                <div class="font-weight-bolder font-size-lg mb-3">Người thực hiện tính toán:</div>
                                <div class="d-flex justify-content-between mb-3">
                                    <span class="mr-15 font-weight-bold">Account Name:</span>
                                    <span class="text-right" id="txt_Ten" >Vũ Văn Hòa</span>
                                </div>
                                <div class="d-flex justify-content-between mb-3">
                                    <span class="mr-15 font-weight-bold">Số điện thoại:</span>
                                    <span class="text-right" id="=txt_sodienthoai">123456789</span>
                                </div>
                                <div class="d-flex justify-content-between">
                                    <span class="mr-15 font-weight-bold">Mã:</span>
                                    <span class="text-right">VVH000121</span>
                                </div>
                            </div>
                            <div class="d-flex flex-column text-md-right">
                                <span class="font-size-lg font-weight-bolder mb-1">TRẠNG THÁI TÍNH TOÁN </span>
                                <span class="font-size-h2 font-weight-boldest text-success mb-1" id="txt_cpt" name="txt_cpt">DONE</span>
                                <span>Đã tính xong.</span>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- end: Invoice footer-->
                <!-- begin: Invoice action-->
                <div class="row justify-content-center py-8 px-8 py-md-10 px-md-0">
                    <div class="col-md-9">
                        <div class="d-flex justify-content-between">
                            <button type="button" class="btn btn-light-primary font-weight-bold"><a href="/KetquaTinhToan"> ..Trở Về</a></button>
                            <button type="button" class="btn btn-primary font-weight-bold"> <a href="/BoTriThep">Tiếp Tục.</a></button>
                        </div>
                    </div>
                </div>
                <!-- end: Invoice action-->
                <!-- end: Invoice-->
            </div>
        </div>
        <!-- end::Card-->
    </div>


</div>

<script>
    $(document).ready(function () {


        $.ajax({
            type: "POST",
            url: '/KetquaTinhToan/GetKetQuaTinhToan',
            success: function (rel) {
                var kq = JSON.parse(rel);
                $("#txt_As_Canh_Dai").html(kq.ThepCanhDai+ "   cm2");
                $("#txt_As_Canh_Ngan").html(kq.ThepCanhNgan + "   cm2");
                $("#txt_B_Dai").html(kq.Bdai+ " m");
                $("#txt_H_Dai").html(kq.Ldai + " m");
                $("#txt_sc").html(kq.Sococ);
            },
            error: function (rs) {
                console.log(rs);
            }
        });

        // Chạy đoạn Ajax để lấy ra người tính toán :
        $.ajax({
            type: "GET",
            url: '/KetquaTinhToan/GetUserTinhToan',
            success: function (rs) {
                var kq = JSON.parse(rs);
                $("#txt_Ten").html(kq.Ten);
                $("#txt_bcot").html(kq.b_cot);
                $("#txt_hcot").html(kq.h_cot);


            },
            error: function (rs) {
                console.log(rs);
            }
        });
    })

</script>

   

