<script>

    $(document).ready(function () {

        var url = new URL(window.location.href);
        var id_dm = url.searchParams.get("id");
      
        $.ajax({
            url: '/PVl/getPVL',    
            type: "post",
            data: { id_dm: id_dm },
            success: function (result) {  
                if (result == "500") {
                    alert("Bạn chưa chọn NGười Dùng");
                    window.location.href = "/User";
                } else {
                    var coc = JSON.parse(result);
                    var kq = coc.Coc.SucChiuTai + ' KN';
                    $("#txt_pvl").html(kq);
                    $("#txt_DkCoc").html(coc.Coc.DuongKinhCoc + "m");
                    $("#txt_chieudai").html(coc.Coc.DoDai + "m");
                    $("#txt_Rb").html(coc.Bt.rb);
                    $("#txt_Rbt").html(coc.Bt.rbt);
                    $("#txt_betong").html(coc.Bt.tenbetong);
                }

              
            }
        });



       
    })


</script>
