                    </div>
                </div>
                <!-- end: Invoice action-->
                <!-- end: Invoice-->
            </div>
        </div>
        <!-- end::Card-->
    </div>


</div>


<script>

    $(document).ready(function () {

        $.ajax({
            url: '/CPT/getCPT',      // đây là API lấy ra tất cả các lớp đất
            type: "post",
            success: function (result) {
                $("#txt_spt").html(result);
            }
        });



        $.ajax({
            url: '/Service/getBetong',      // đây là API lấy ra tất cả các lớp đất
            type: "post",
            success: function (result) {
                var betong = JSON.parse(result);
                $("#txt_betong").html(betong.tenbetong);
                $("#txt_Rb").html(betong.rb);
                $("#txt_Rbt").html(betong.rbt);
            }
        });
    })


</script>


